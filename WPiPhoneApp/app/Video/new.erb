<div class="toolbar">
	<h1 id="pageTitle">
		New Video
	</h1>
</div>

<form title="New Video" 
	  class="panel"
	  id="video_new_form" 
	  method="POST" 
	  action="<%=url_for(:action => :create)%>" selected="true">
	<fieldset>
		<input type="hidden" name="id" value="<%=@video.object%>"/>
		
		  <div class="row">
			  <label>Name: </label>
			  <input type="text" name="video[name]"/>
		  </div>
		
		  <div class="row">
			  <label>Url: </label>
			  <input type="text" name="video[url]"/>
		  </div>
		
		  <div class="row">
			  <label>Description: </label>
			  <input type="text" name="video[description]"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Create"/>
</form>